<section class="photo-of-the-day">
  <div class="content">
    <img class="feature" src="{{ photo.thumbnail.src }}" height="508" width="476" alt="">
    <div class="right">
      <h2>Photo of the day</h2>
      <p class="description">{{ photo.description }}</p>
      <p class="byline">photo <span class="author">{{ photo.photo_credit }}</span></p>

      <div class="latest-photos">
        <h3>Latest Photos</h3>
        <div class="photos-slide">
          {% for old_photo in old_photos %}
            <img src="{{ old_photo.thumbnail.src }}" alt="">
          {% endfor %}
        </div>
      </div>
    </div>

  </div>
</section>